    call gl(0,"bgcc0013bz")
    call gl(1,"TCST0002c|TCST0001")
    call gp(1,t=center)#x=190
    call vsp(0,1)
    call vsp(1,1)
    with Dissolve(500.0/1000.0)
    voice "vmcca0019yki001"
    友貴 "「うわ……太一？」"
    "突如とした現れた着物の男に、友貴はびびったようだった。"
    voice "vmcca0019yki002"
    友貴 "「なんて顔だ……」"
    太一 "「ほっとけ」"
    call gl(1,"TCST0000c|TCST0000")
    call vsp(1,1)
    with dissolve
