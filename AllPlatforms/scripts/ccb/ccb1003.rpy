    call gl(1,"TCYM0011|TCYM0011")
    call vsp(1,1)
    with dissolve
    voice "vfccb1003mki002"
    美希 "「はい。立派です」"
    太一 "「うむ、立派だ」"
    call gl(1,"TCYM0021|TCYM0021")
    call vsp(1,1)
    with dissolve
    voice "vfccb1003mki003"
    美希 "「先輩が参加してないのが不思議ですね」"
