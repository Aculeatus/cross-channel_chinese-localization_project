label ccc0040:
    call gl(0,"bgcc0008a")
    call vsp(0,1)
    call vsp(1,0)
    with wipeleft
    play bgm "bgm/bgm002.ogg"
    "友貴がいた。"
    "保健室の中をうかがっている。"
    太一 "「友貴ー」"
    "声をかけると、背中がびくりと跳ねた。"
    call gl(1,"TCST0001b|TCST0001")
    call gp(1,t=center)#x=190
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki000"
    友貴 "「た、太一か……」"
    太一 "「学校にいたんだな」"
    call gl(1,"TCST0000b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki001"
    友貴 "「ああ、ちょっと様子見に……ちょっとこっち」"
    太一 "「お？」"
    "連れて行かれる。"
    voice "vmCCC0040yki002"
    友貴 "「ここならいいかな」"
    太一 "「どうしてこんなはしっこに」"
    voice "vmCCC0040yki003"
    友貴 "「……いや」"
    "口ごもる。"
    太一 "「で、平和維持活動部はどう？」"
    call gl(1,"TCST0004b|TCST0004")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki004"
    友貴 "「生命維持活動部。そっちはなんとか」"
    call gl(1,"TCST0000b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki005"
    友貴 "「太一は、食べ物とかは平気なんだよね？」"
    太一 "「まあな。今のところ困ってない」"
    太一 "「一週間もてばいいし」"
    voice "vmCCC0040yki006"
    友貴 "「は？」"
    太一 "「こっちの話だよ、キミィ」"
    太一 "「保健室に用事か？」"
    "友貴の顔がひきつった。"
    call gl(1,"TCST0001b|TCST0001")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki007"
    友貴 "「ノ、ノー」"
    "なんで英語やねん。"
    太一 "「隠し事があると見た」"
    call gl(1,"TCST0000b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki008"
    友貴 "「ないと見た」"
    太一 "「……保健室、友貴、放課後、童貞……この四つのキーワードから導きだれる結論とは……」"
    "推理の時だった。"
    voice "vmCCC0040yki009"
    友貴 "「いや、童貞関係ないから」"
    太一 "「難問だな。こんな時はメタ推理だ」"
    call gl(1,"TCST0003b|TCST0000")
    call vsp(1,1)
    with dissolve 
    voice "vmCCC0040yki010"
    友貴 "「また変なこと言いだした」"
    太一 "「多世界敷衍推理！」"
    太一 "「これは各要素から派生する無数の可能性の全てを並列して思考し、それら無限の選択肢の中からもっともそれっぽいものを任意に抽出する……量子コンピュータっぽい推理法だ」"
    call gl(1,"TCST0005b|TCST0004")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki011"
    友貴 "「あてずっぽう、と言わないかな、それ」"
    太一 "「そのためには思考を活性化させる糖分が必要だ。おかしください」"
    友貴 "「…………」"
    太一 "「ギブミーガム、キブミーチョコレート」"
    call gl(1,"TCST0000b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki013"
    友貴 "「……太一、いつもあめ玉とか持ってるのに……」"
    太一 "「あれは血糖値が下がったときの緊急用」"
    call gl(1,"TCST0003b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki014"
    友貴 "「糖尿病か」"
    "友貴はポケットをごそごそと漁る。"
    "今や食い物だったら友貴である。"
    "いや、もはや、友貴が、食い物なのである！"
    "……んなバカな。"
    call gl(1,"TCST0000b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki015"
    友貴 "「ほら」"
    "本当にガムとチョコレートが出てきた。"
    太一 "「おまえ、すごいヤツだな」"
    voice "vmCCC0040yki016"
    友貴 "「え……何が？　つうか、自分で欲しいって言ったんじゃないか」"
    太一 "「これで俺の特殊な脳みそも安泰だ」"
    voice "vmCCC0040yki017"
    友貴 "「？？？」"
    "ガムとチョコレート。"
    "同時に口に放り込む。"
    call gl(1,"TCST0001b|TCST0001")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki018"
    友貴 "「うげっ」"
    太一 "「同時に味わうとうまい」"
    call gl(1,"TCST0003b|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki019"
    友貴 "「そ……」"
    "呆れていた。"
    太一 "「推理の続きなんだけどさ」"
    太一 "「怪我でもしたのか？」"
    "少し驚く友貴。"
    "すぐ皮肉げな表情に、取ってかわられる。"
    call gl(1,"TCST0004b|TCST0004")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0040yki020"
    友貴 "「そう……怪我、したんだ」"
    voice "vmCCC0040yki021"
    友貴 "「……いい気味だよ」"
    太一 "「はい？」"
    voice "vmCCC0040yki022"
    友貴 "「……なんでもないから。じゃあね」"
    hide pic1
    with dissolve
    "去っていく。"
    太一 "「ふーむ」"
    "ガムごと、チョコを嚥下する。"
    "俺はガム食う属性の人だ。"
    太一 "「……怪我というより、心の病気の方だったか」"
    stop bgm
    return
