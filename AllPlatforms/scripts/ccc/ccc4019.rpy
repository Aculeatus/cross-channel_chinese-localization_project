label ccc4019:
    call gl(0,"bgcc0007")
    call vsp(0,1)
    call vsp(1,0)
    call vsp(2,0)
    with wipeleft
    "そして部活。"
    "友貴が結線してくれたので、テントを張って長テーブルを出して、機材を置いた。"
    太一 "「あとはアンテナか」"
    "図面にはまだ問題点が残っている。"
    "放送には影響はないかも知れないが。"
    "部活であるからには、ちゃんと予定通りやらねば。"
    "作業。"
    "気配。"
    "周囲に目線を流す。"
    "誰もいない。"
    "気のせい……ではないのかな。"
    "となると、ここは危ない。高所は。"
    "じっと脚立の上というのも良くない。"
    "射程距離はともかく、有効射程が２０メートルくらいとして。"
    太一 "「もう一がんばりなんだけどな……」"
    "ちょうど先輩が来た。"
    call gl(1,"TCMM0000|TCMM000x")
    call gp(1,t=center)#x=225
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa000"
    見里 "「寝坊してしまいました～」"
    太一 "「生活がどんどん荒れてきますね」"
    call gl(1,"TCMM0005|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa001"
    見里 "「……ははは。言葉もないです」"
    call gl(1,"TCMM0003|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa002"
    見里 "「本当、もうおしまいですよねぇ……」"
    太一 "「え？」"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa003"
    見里 "「あ、テントです」"
    太一 "「配線も終わってますよ」"
    call gl(1,"TCMM0004|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa004"
    見里 "「ま、まさかあなたが？」"
    太一 "「はい、先輩のために……」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa005"
    見里 "「すごいですっ！　かゆいところに手が届きます！　ぺけくんのすごさはもはや―――」"
    太一 "「と言いたいところですが、友貴です」"
    call gl(1,"TCMM0001|TCMM000x")
    call vsp(1,1)
    with dissolve
    見里 "「……」"
    "まず呆れた。"
    call gl(1,"TCMM0006|TCMM0006")
    call vsp(1,1)
    with dissolve
    "そして驚いた。律儀だ。"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa007"
    見里 "「友貴が手伝ってくれたんですか？」"
    太一 "「正しくは手伝わせたんですけどね」"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa008"
    見里 "「そう……でも……手伝ってくれたんですね、あの子……」"
    "安堵が浮かぶ。"
    太一 "「良かったですね」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa009"
    見里 "「……はい」"
    太一 "「ところで先輩、俺ちょっと腹くだして……交代してもらっていいですか？」"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa010"
    見里 "「はい。ここまでやってくれたら、もう一人でもいいくらいです」"
    太一 "「てっぺんのアレ、ネジ馬鹿になってますから交換した方がいいです」"
    voice "vfCCC4019msa011"
    見里 "「了解です」"
    太一 "「……では、ちょっと闘ってきます」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCC4019msa012"
    見里 "「ふぁいとーおー！」"
    "声援に片手で応じつつ、俺は校舎に入った。"
    "さあ。"
    "訓練の成果を見せてもらおうじゃないか。"
    stop bgm
    return
