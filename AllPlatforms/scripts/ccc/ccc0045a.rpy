label ccc0045a:
    call gl(0,"bgcc0005a")
    call vsp(0,1)
    call vsp(1,0)
    with wipeleft
    "帰り道。"
    call gl(1,"TCCN0100b|TCCN")
    call gp(1,t=center)#x=180
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk000"
    七香 "「へーい」"
    "そばに七香がいた。"
    "忽然と立ち現れたような……。"
    太一 "「あ、七香……」"
    voice "vfCCC0045annk001"
    七香 "「お元気ー？」"
    太一 "「そんなことより、あの祠って―――」"
    "抱きしめられた。"
    太一 "「うぐっ？」"
    call gl(0,"evcc0010a")
    call vsp(0,1)
    call vsp(1,0)
    with ImageDissolve("sys/EFMSK_22_MSK.bmp",time=1)
    play bgm "bgm/bgm021.ogg"
    voice "vfcca0023nnk031"
    七香 "「楽しいって、言えるなら、いいじゃん」"
    太一 "「いや、言ってないし」"
    "つうか会話に脈絡ないんですけど。"
    "なんなんだこの唐突感動イベントは……。"
    "しかし、それはそれとして。"
    "あいまいな胸の柔らかさ。"
    "少女の香り。"
    "不思議と、猥雑なものは感じない。"
    "抱かれた時の感覚が、曜子ちゃんとは違った。"
    voice "vfcca0023nnk032"
    七香 "「その言葉は、嬉しいんだ。すごく」"
    太一 "「なにも言ってないが……」"
    voice "vfcca0023nnk033"
    七香 "「強くならないと生きる資格がないわけじゃないから」"
    太一 "「聞いちゃいねぇ」"
    voice "vfcca0023nnk034"
    七香 "「弱いままでも、いいんだよ」"
    太一 "「聞けよ！」"
    call gl(0,"bgcc0005a")
    call vsp(0,1)
    call vsp(1,0)
    with ImageDissolve("sys/EFMSK_22_MSK.bmp",time=1)
    "わけがわからなかった。"
    太一 "「胸の感触はすごくよかった」"
    call gl(1,"TCCN0100b|TCCN")
    call gp(1,t=center)#x=180
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk002"
    七香 "「……正直すぎる」"
    太一 "「ただわけはわからなかった」"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk003"
    七香 "「ごめん、間違えたよ」"
    太一 "「なにと？」"
    "七香は頭をかいた。"
    call gl(1,"TCCN0102b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk004"
    七香 "「別のと」"
    太一 "「理解できるように説明して」"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk005"
    七香 "「キミってアンテナ設営の方、着手したみたいだけど、進捗はどう？」"
    太一 "「あのな」"
    voice "vfCCC0045annk006"
    七香 "「んい？」"
    太一 "「わかるように話そう。まず……まずだ」"
    voice "vfCCC0045annk007"
    七香 "「まず？」"
    太一 "「そうだな、いろいろあるんだが」"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk008"
    七香 "「じゃあ一個だけ質問に答えてあげる。どんなことでも答えるよ？」"
    太一 "「パ、パンツの色はっ？」"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk009"
    七香 "「今日は白。でもちょっとかわいいの。ブラとおそろいのやつなんだ」"
    太一 "「純白かぁ」"
    "少女の下着に思いを馳せた。"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk010"
    七香 "「じゃ質問はこれで打ち切ります」"
    太一 "「うおー、しまったー、世界の謎がー！」"
    "反射的に質問してしまったぁ！"
    太一 "「俺は馬鹿だぁ！」"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk011"
    七香 "「そしてエロい」"
    太一 "「……取り消しだめ？」"
    voice "vfCCC0045annk012"
    七香 "「ダメー」"
    "腕でバッテンを作る七香。"
    voice "vfCCC0045annk013"
    七香 "「次の機会だね」"
    太一 "「次って、俺もうこの会話忘れちゃってんじゃん」"
    voice "vfCCC0045annk014"
    七香 "「ほう。気づかれましたか」"
    太一 "「気づくさ。けど気づいただけで、どうしてこんなことになったとか、人類どうなったとか、わかんないことだらけだ」"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk015"
    七香 "「どうしてこうなったか、なんてあたしにもわからんよ」"
    太一 "「……そ、そうなのでちゅか？」"
    "小首を傾けて、可愛らしく問いかける。"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk016"
    七香 "「そうなのでちゅよ」"
    "小首を傾けて、可愛らしく返された。"
    voice "vfCCC0045annk017"
    七香 "「まあ……こうなったとしか言えない」"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk018"
    七香 "「理由を考えようにも、ぜーんぜんわかりまっせーん」"
    太一 "「えー」"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk019"
    七香 "「花も恥じらう女学生に何を期待しておるのかね」"
    太一 "「だいたいさあ、おかしいんだよ！」"
    voice "vfCCC0045annk020"
    七香 "「む、何が？」"
    太一 "「普通、キミみたいな役割はもっと大人しい電波っぽい娘がやるものだろ！」"
    voice "vfCCC0045annk021"
    七香 "「……はあ？」"
    太一 "「キミは勝ち気な幼なじみっぽいんだから、造形にふさわしく物語からの要請事項に従って俺の隣にでも住んで毎朝起こしに来いよ！」"
    "指を突きつけた。"
    voice "vfCCC0045annk022"
    七香 "「……アホかおまいは」"
    太一 "「とんだミスキャストだ！」"
    太一 "「ただ配置を変えれば特別なことをしてるとでも思ったか、低脳短絡が」"
    太一 "「そーいうのを表層的な思考と言うんだ」"
    太一 "「変わったことがしたければ、根底からやってみろ。今まで誰もしたことがないようなやつをだ！」"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk023"
    七香 "「その言葉全部返す」"
    太一 "「俺は表層的なアンチテーゼにばかり目を奪われた低脳短絡ですーっ！！」"
    "泣き伏した。"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk024"
    七香 "「泣くな泣くな、若者」"
    太一 "「……ま、こうなったら次の機会に同じ質問をしてくれることを祈るのみだな」"
    voice "vfCCC0045annk025"
    七香 "「コレがまた意外と違うんだなぁ」"
    太一 "「え、そうなの？」"
    call gl(1,"TCCN0102b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk026"
    七香 "「他の人たちは日曜夜の時点でもう気持ちが決まってるから、毎回似たような行動取るんだけどさ」"
    call gl(1,"TCCN0101b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk027"
    七香 "「太一は毎回けっこう違う」"
    call gl(1,"TCCN0100b|TCCN")
    call vsp(1,1)
    with dissolve
    voice "vfCCC0045annk028"
    七香 "「……ことを重大に受け止めてないというか」"
    太一 "「うーん」"
    "あるかも。"
    "俺自身のことを考えると、他人は少ない方がいい。"
    "だから今の状況は、そう悪くないと思ってる。"
    "まったく不安がないといえば嘘になるが……。"
    太一 "「わがらんなぁ」"
    call gl(0,"evcc0003a")
    call vsp(0,1)
    call vsp(1,0)
    with Dissolve(500.0/1000.0)
    voice "vfCCC0045annk029"
    七香 "「そ」"
    "とりあえず今の会話。"
    "自転車でウイリーを試みている七香を見やる。"
    "この人……記憶リセットかかってないってこと。"
    太一 "「あのさ……」"
    voice "vfCCC0045annk030"
    七香 "「質問は禁止」"
    太一 "「うっ」"
    voice "vfCCC0045annk031"
    七香 "「言ったことは守ろう」"
    voice "vfCCC0045annk032"
    七香 "「別に隠しているわけではないんだけど……ね」"
    voice "vfCCC0045annk033"
    七香 "「……ちょっと、恐いんだ」"
    太一 "「こわい？」"
    voice "vfCCC0045annk034"
    七香 "「全部教えることが、こわい」"
    voice "vfCCC0045annk035"
    七香 "「太一が追いつめられるような気がして」"
    "快活だった表情が、危惧を形作る。"
    太一 "「……そう」"
    "まあ約束は約束だ。"
    七香 "「……」"
    太一 "「……」"
    "湿っぽくなっちゃいました。"
    "和ませることにした。"
    太一 "「あの……質問じゃないんだけど、さっきの下着の件さぁ」"
    voice "vfCCC0045annk037"
    七香 "「ん、なに？」"
    太一 "「ブラはフロントホックをつけて欲しいんですけど」"
    "七香は訝しげに眉をよじった。"
    voice "vfCCC0045annk038"
    七香 "「フロントホックって……この花も恥じらう女学生である七香さんに？」"
    太一 "「そうだ」"
    voice "vfCCC0045annk039"
    七香 "「……理由は？」"
    太一 "「こう、女の子と初夜った時にさ、ブラを外すじゃないですか」"
    "※初夜る＝太一語。初Ｈのこと。"
    太一 "「フロントホックであれば、こう谷間に差し入れた指で小粋にフィンガースナップを奏でつつホックを外したその瞬間、いましめから解放されたたわわな母なる双丘がたわわんと」"
    太一 "「……」"
    太一 "「たわわなのがたわわん、と―――」"
    voice "vfCCC0045annk040"
    七香 "「繰り返すな」"
    voice "vfCCC0045annk041"
    七香 "「自分で思っているほど、たいしたギャグじゃない」"
    太一 "「つ……つまりその、揺れる様を鑑賞することかできるから、です！」"
    voice "vfCCC0045annk042"
    七香 "「却下」"
    "そんな馬鹿なことを話していると。"
    call gl(0,"bgcc0002a")
    call vsp(0,1)
    with wipeleft
    "じきに我が家。"
    太一 "「……よってく？」"
    voice "vfCCC0045annk043"
    七香 "「ううん、帰る」"
    "ふと思う。"
    "どこに帰っているんだろう、七香は。"
    太一 "「じゃあ、また」"
    call gl(0,"evcc0053")
    call vsp(0,1)
    call vsp(1,0)
    with Dissolve(500.0/1000.0)
    voice "vfCCC0045annk044"
    七香 "「太一！」"
    "呼ばれて。"
    "頭だけ巡らせて、背後を視野におさめた。"
    "七香は坂の上にいた。"
    "ひどく遠い。"
    "瞬時に移動したような。"
    voice "vfCCC0045annk045"
    七香 "「たーいちっ」"
    "離れているにもかかわらず、声は冴え冴えと耳に届いた。"
    太一 "「え、あ、なに？」"
    "狼狽えてしまう。"
    "七香は間違いなく―――"
    "自転車の脇に立ち、片手を高々とあげる。空を支えて、笑顔。"
    voice "vfCCC0045annk046"
    七香 "「また来週」"
    "手を振る。"
    太一 "「あ、うん……」"
    "俺も振り返した。"
    太一 "「また、来週」"
    "七香は自転車に乗る。"
    "走り出すと、少女の姿は坂の窪みを滑り降りて見えなくなる。"
    call gl(0,"bgcc0000d")
    call vsp(0,1)
    with Dissolve(500.0/1000.0)
    "いくら待っても、向こう側の斜面をよじのぼる姿を見ることはできなかった―――"
    stop bgm
    return
