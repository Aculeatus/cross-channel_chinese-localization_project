    pause (500.0/1000.0)
    call gl(0,"bgcc0005")
    call vsp(0,1)
    with wipeleft
    call gl(1,"TCSH0000|tcsh")
    call gp(1,t=center)#x=180
    call vsp(1,1)
    with dissolve
    voice "vmCCC0025sku000"
    桜庭 "「よう」"
    太一 "「ほれ」"
    "マスクを渡した。"
    call gl(1,"TCSH0000a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCd6002sku000"
    桜庭 "「ＯＫ」"
    "何の疑問も持たずにつけた。"
    call gl(1,"TCSH0003a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0025sku001"
    桜庭 "「腹が減った」"
    太一 "「食ってないのか？」"
    call gl(1,"TCSH0002a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0025sku002"
    桜庭 "「一時間目の授業に備えている」"
    太一 "「……カレーパンを食うのが授業なのか」"
    call gl(1,"TCSH0003a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0025sku003"
    桜庭 "「カレーパンがなくなるその日まで」"
    "クールに決めた。"
    "記録通りに。"
    太一 "「レトルトのカレーでも食ってればいいじゃないか」"
    call gl(1,"TCSH0000a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0025sku004"
    桜庭 "「カレーは嫌いだ」"
    "記録通りだ。"
    "どんどん成就していく。"
    call gl(1,"TCSH0002a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCC0025sku010"
    桜庭 "「ヘックス！」"
    with vpunch
    太一 "「……六角形の惨劇」"
    "これも記録にあった。"
    "発生率は、今まで確認しただけでも１５％以上。"
    "七回に一度は、鼻汁橋をぶち込まれる計算だ。"
    "だが過去の偉い人（俺）は、マスクを装着させることで回避する術を編み出した。"
    call gl(1,"TCSH0003a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCd6002sku001"
    桜庭 "「……マスク、取っていいか？」"
    太一 "「それは許可できない」"
    call gl(1,"TCSH0002a|tcsh")
    call vsp(1,1)
    with dissolve
    voice "vmCCd6002sku002"
    桜庭 "「つらいな……人生は」"
    太一 "「俺が言いたいよ」"
    return
