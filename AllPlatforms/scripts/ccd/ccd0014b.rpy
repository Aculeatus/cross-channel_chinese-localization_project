label ccd0014b:
    call gl(0,"bgcc0007")
    call vsp(0,1)
    with wipeleft
    "みみ先輩は眠っておられた。"
    play bgm "bgm/bgm005.ogg"
    太一 "「もしもしー」"
    call gl(1,"TCMM0011|TCMM0011")
    call gp(1,t=center)#x=225
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa013"
    見里 "「……んー？」"
    太一 "「おはようございます。朝です。太一です」"
    voice "vfCCD0001msa014"
    見里 "「え……あ、本当……」"
    "のろのろと起きあがる。"
    "えーと、パンツ見られるんだよな。"
    "俺は片膝をついた。"
    "女王に使える騎士のごとくだ（動機はともかく）。"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfcca0015msa002"
    見里 "「とりあえず、おはようございます」"
    太一 "「おはようございます、先輩」"
    太一 "「日中にここで寝こけると陽光で死にますよ？」"
    call gl(1,"TCMM0011|TCMM0011")
    call vsp(1,1)
    with dissolve
    voice "vfcca0015msa003"
    見里 "「あ、はい、そうですね、気をつけました」"
    "スカートの裾を持ち上げて眼鏡をふく。"
    "おー。"
    "むちむちしてる。"
    "ほどよくむちむちしてる。"
    "先輩はきれいだなぁ。"
    voice "vfCCD0001msa015"
    見里 "「ふぁぁぁ」"
    "スカートがぱさりと元に戻った。"
    "先輩は眼鏡をかけ直す。"
    voice "vfCCD0001msa016"
    見里 "「眠いですね」"
    太一 "「小夏日和ですものね」"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa017"
    見里 "「聞いたことがない言葉です……」"
    太一 "「作りましたから」"
    call gl(1,"TCMM0031|TCMM0031")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa018"
    見里 "「ぺけくんはものを作る才能があるようです」"
    太一 "「……」"
    call gl(1,"TCMM0021|TCMM0021")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa019"
    見里 "「どうしてしゃがんだままなんですか？」"
    太一 "「愛の高射砲が空に恋しているのです。へそまで反り返らんばかりに」"
    call gl(1,"TCMM0031|TCMM0031")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa020"
    見里 "「無骨ではありますが、それでいて詩的な物言い……」"
    太一 "「恐縮です」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa021"
    見里 "「のどかわきましたね」"
    hide pic1
    with dissolve
    "先輩は自分の荷物をあさった。"
    "ころん"
    太一 "「ん？」"
    "ワンカップの酒瓶だ。"
    voice "vfCCD0001msa022"
    見里 "「ごくごくごくごく」"
    太一 "「おわ、そうだった！」"
    "奪い取る。"
    call gl(1,"TCMM0005|TCMM000x")
    call gp(1,t=center)#x=225
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa023"
    見里 "「あっ……なにするですか」"
    太一 "「学校でお酒はダメ！」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa024"
    見里 "「おばあちゃんの家が酒屋さんなので、いいのです」"
    太一 "「だめですよ」"
    call gl(1,"TCMM0001|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa025"
    見里 "「……知ってます」"
    play bgm "bgm/bgm005.ogg"
    "拗ねた。"
    voice "vfCCD0001msa026"
    見里 "「でも、もう守る決まりごともないじゃないですか」"
    太一 "「まあ」"
    call gl(1,"TCMM0003|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa027"
    見里 "「そうなんですよね、人がいなかったら、ルールなんて意味がないんです」"
    play bgm "bgm/bgm015.ogg"
    voice "vfCCD0001msa028"
    見里 "「じゃあわたしは、なんのために……」"
    "頭をかきむしる。"
    太一 "「……先輩」"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa029"
    見里 "「ぺけくんは、どうしてここに？」"
    太一 "「様子を見に来たんです」"
    call gl(1,"TCMM0003|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa030"
    見里 "「……どうして……今さら」"
    太一 "「みみ先輩が、好きだから」"
    voice "vfCCD0001msa031"
    見里 "「…………そんな……ことを……」"
    "鼻の頭が赤いのは、酒のせいだろうか？"
    call gl(1,"TCMM0006|TCMM0006")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa032"
    見里 "「軽々しく言ってはいけません！　愛の言葉は、男女双方にとって大切な分岐点になるんですから！」"
    "叱られた。"
    太一 "「いや……でも、俺を暗がりから明るい場所に導いてくれたの、先輩っすから」"
    "ただ隣にいるだけだった彼女とは違う。"
    call gl(1,"TCMM0003|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa033"
    見里 "「そんなこと……ただ声をかけただけですから」"
    太一 "「きっかけってそんなものでしょう？」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa034"
    見里 "「はいっ、はいっ、このお話はなしでーす」"
    "ぱたぱたと手を振る。"
    "……駄目か。"
    太一 "「結婚を前提としたおつきあいを―――」"
    call gl(1,"TCMM0000|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa035"
    見里 "「そうだ、原稿お願いシマス！」"
    "逃げた。"
    太一 "「原稿ですか？」"
    call gl(1,"TCMM0002|TCMM000x")
    call vsp(1,1)
    with dissolve
    voice "vfCCD0001msa036"
    見里 "「はい、清く正しく明るく元気な、初回放送用の原稿作成依頼です」"
    太一 "「……んー」"
    "まあ、当初の目的だな。"
    太一 "「いいですよ」"
    stop bgm
    "どうせノートに、今までのパターンも網羅されてる。"
    "わざわざ新しく作る必要もない。"
    call vsp(1,0)
    return
