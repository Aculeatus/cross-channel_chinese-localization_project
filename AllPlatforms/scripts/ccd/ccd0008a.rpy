label ccd0008a:
    call gl(0,"bgcc0010")
    call vsp(0,1)
    call vsp(1,0)
    call vsp(2,0)
    call vsp(3,0)
    with wipeleft
    play bgm "bgm/bgm007.ogg"
    "友貴が、廊下側に張り出したカムフラージュを直していた。"
    太一 "「おーい」"
    call gl(1,"TCST0001|TCST0001")
    call gp(1,t=center)#x=190
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki013"
    友貴 "「う、太一……」"
    "気恥ずかしげに、窓際から離れる。"
    "部室類は、廊下側にも窓がはめ込まれている。"
    "外から監視できるようにだ。"
    "理由は推して知るべし。"
    太一 "「……直したって意味ないんじゃ？」"
    call gl(1,"TCST0000|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki014"
    友貴 "「気になってさ。特に意味はないよ」"
    "意味はない、か。"
    "確かにそうだ。実質的には。"
    "けど心の上では？"
    call gl(1,"TCST0003|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki015"
    友貴 "「しっかし、本当に誰もいないね」"
    太一 "「ああ、本当に八人だけみたいだ」"
    voice "vmCCD0001yki016"
    友貴 "「なにがなにやら……」"
    "友貴は、みみ先輩を恨んでいるんだったな。"
    "実の姉弟なのに。"
    "苗字が違うのは、いろいろ事情があるらしい。"
    "家庭の事情が。"
    太一 "「昨夜のアレ、本気か？」"
    call gl(1,"TCST0000|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki017"
    友貴 "「ん？」"
    太一 "「食料問題を友貴が仕切るって」"
    call gl(1,"TCST0004|TCST0004")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki018"
    友貴 "「ああ、午後から動くよ。学校にはちょっと様子見に来ただけだし」"
    太一 "「食料か」"
    "必要ないものだ。"
    "どうせ一週間で世界は公転。"
    "仮に死んでも、取り返しはつく。"
    太一 "「……」"
    "ざわりと。心が。"
    "いかん……。"
    "気を静めないと。"
    太一 "「友情は見返りを」"
    voice "vmCCD0001yki019"
    友貴 "「求めない」"
    "ぐっ"
    "俺たちは親指を立てた。"
    call gl(1,"TCST0003|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki020"
    友貴 "「……だから唐突」"
    太一 "「なあ友貴」"
    call gl(1,"TCST0000|TCST0000")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki021"
    友貴 "「ん？」"
    太一 "「みみ先輩と……ケンカしてるよな？」"
    voice "vmCCD0001yki022"
    友貴 "「ああ……」"
    太一 "「あれって、やっぱこんなご時世でも、続くのかな？」"
    voice "vmCCD0001yki023"
    友貴 "「……別に」"
    "翳る。"
    call gl(1,"TCST0004|TCST0004")
    call vsp(1,1)
    with dissolve
    voice "vmCCD0001yki024"
    友貴 "「どうだっていいよ、あの人のことは」"
    "頑なな言葉。"
    太一 "「マンガとかじゃ、そーいう諍いからいろいろ崩壊したりするんだけど」"
    "友貴はひどく、渋い顔をした。"
    stop bgm
    return
